# SA Management Frontend - Environment Configuration

# API Configuration
REACT_APP_API_URL=http://192.168.1.45:8000/api
REACT_APP_BASE_URL=http://192.168.1.45:8000

# Application Configuration
REACT_APP_NAME="SA Management System"
REACT_APP_VERSION=1.0.0

# Environment
NODE_ENV=development

# Development Server Configuration
PORT=3001
HOST=0.0.0.0

# Hot Reload Configuration (for Docker)
CHOKIDAR_USEPOLLING=true
FAST_REFRESH=true

# WebSocket Configuration (for Docker development)
WDS_SOCKET_HOST=192.168.1.45
WDS_SOCKET_PORT=3001

# Build Configuration
GENERATE_SOURCEMAP=true
INLINE_RUNTIME_CHUNK=false

# Feature Flags
REACT_APP_ENABLE_DEBUG=true
REACT_APP_ENABLE_LOGGING=true

# File Upload Configuration
REACT_APP_MAX_FILE_SIZE=10485760
REACT_APP_ALLOWED_FILE_TYPES=.xlsx,.xls,.csv

# UI Configuration
REACT_APP_THEME=default
REACT_APP_LANGUAGE=en

# Authentication Configuration
REACT_APP_SESSION_TIMEOUT=7200
REACT_APP_TOKEN_REFRESH_INTERVAL=300

# Export Configuration
REACT_APP_EXPORT_MAX_RECORDS=10000
REACT_APP_DEFAULT_PAGE_SIZE=25

# Date/Time Configuration
REACT_APP_DATE_FORMAT=DD/MM/YYYY
REACT_APP_TIME_FORMAT=HH:mm:ss
REACT_APP_TIMEZONE=Europe/Paris